<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_bottom_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">
    
    <View
        android:layout_width="100dp"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="#232222"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:textStyle="bold"
        android:text="@string/select_address" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottom_dialog_add"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:textColor="#283891"
        android:textAlignment="textStart"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_add_24"
        android:text="  Add new address" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottom_dialog_procced"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_dialog_button"
        android:text="@string/procced" />

</LinearLayout>