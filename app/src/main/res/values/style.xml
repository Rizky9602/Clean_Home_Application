<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="intro_textView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#5B5B5B</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="navbar_button" >
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">25dp</item>
    </style>

    <style name="plus_button">
        <item name="android:background">@drawable/plus_button_dashboard</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:text">+</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">android:fontFamily="@font/roboto_light"</item>
    </style>

    <style name="bottom_dialog_animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
</resources>